{
	"name": "sveltepuzzle",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"update-version": "echo \"This version was built on $(date). Only applies for builds, not for dev.\" > src/routes/version/+page.svelte",
		"dev": "vite dev",
		"build": "npm run update-version && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"scss-to-json": "scss-to-json ./src/styles/app.scss > ./src/routes/scss-vars.ts",
		"resources": "npx capacitor-resources -p android"
	},
	"devDependencies": {
		"@capacitor/cli": "^4.6.2",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/adapter-static": "^1.0.5",
		"@sveltejs/kit": "^1.0.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"sass": "^1.57.1",
		"scss-to-json": "npm:@crocsx/scss-to-json@^3.0.0",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"svelte-confetti": "^1.2.2",
		"svelte-loading-spinners": "^0.3.4",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0"
	},
	"type": "module",
	"dependencies": {
		"@capacitor/android": "^4.6.2",
		"@capacitor/core": "^4.6.2",
		"@capacitor/ios": "^4.6.2"
	}
}
